<%= form_for @changeset, @action, fn f -> %>
  <%= if @changeset.action do %>
    <div class="alert alert-danger">
      <p>Oops, something went wrong! Please check the errors below.</p>
    </div>
  <% end %>

  <div class="form-group">
    <%= label f, :amount_of_requests, class: "control-label" %>
    <%= number_input f, :amount_of_requests, class: "form-control" %>
    <%= error_tag f, :amount_of_requests %>
  </div>

  <div class="form-group">
    <%= label f, :successful_requests, class: "control-label" %>
    <%= number_input f, :successful_requests, class: "form-control" %>
    <%= error_tag f, :successful_requests %>
  </div>

  <div class="form-group">
    <%= label f, :average_request_time, class: "control-label" %>
    <%= number_input f, :average_request_time, class: "form-control" %>
    <%= error_tag f, :average_request_time %>
  </div>

  <div class="form-group">
    <%= label f, :plan, class: "control-label" %>
    <%= text_input f, :plan, class: "form-control" %>
    <%= error_tag f, :plan %>
  </div>

  <div class="form-group">
    <%= submit "Submit", class: "btn btn-primary" %>
  </div>
<% end %>
